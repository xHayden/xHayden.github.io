---
layout: base
permalink: "{{ slug | slugify | url }}/"
---
<div class="border-b-2 mb-8 pb-2">
    <h1 class="text-gray-900 text-3xl md:text-4xl xl:text-5xl pb-2 mb-2 mt-0 pt-0">{{title}}</h1>
    <div class="flex justify-between flex-col gap-2">
        <p class="text-lg md:text-xl font-extralight">{{description}}</p>
        <div class="leading-snug">
            <p class="text-sm md:text-base p-0 m-0">By Hayden Carpenter</p>
            <p class="text-xs md:text-sm p-0 m-0">{{date | postDate }}</p>
        </div>
    </div>
</div>
{{content| safe}}
{% include "partials/_paginate.njk" %}